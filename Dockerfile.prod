# Multi-stage Dockerfile for production
# P09-T009: Production deployment configuration

# Stage 1: Build server
FROM node:20-alpine AS server-builder

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY server/package.json ./server/
COPY shared/package.json ./shared/

# Install pnpm and dependencies
RUN npm install -g pnpm@10.20.0
RUN pnpm install --frozen-lockfile

# Copy source code
COPY server ./server
COPY shared ./shared

# Build server
WORKDIR /app/server
RUN pnpm build

# Stage 2: Build client
FROM node:20-alpine AS client-builder

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY client/package.json ./client/

# Install pnpm and dependencies
RUN npm install -g pnpm@10.20.0
RUN pnpm install --frozen-lockfile

# Copy source code
COPY client ./client

# Build client
WORKDIR /app/client
RUN pnpm build

# Stage 3: Production image
FROM node:20-alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Create app user
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# Copy package files for production dependencies
COPY --chown=appuser:appuser package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY --chown=appuser:appuser server/package.json ./server/
COPY --chown=appuser:appuser shared/package.json ./shared/

# Install pnpm and production dependencies only
RUN npm install -g pnpm@10.20.0
RUN pnpm install --frozen-lockfile --prod

# Copy built artifacts
COPY --chown=appuser:appuser --from=server-builder /app/server/dist ./server/dist
COPY --chown=appuser:appuser --from=client-builder /app/client/dist ./client/dist
COPY --chown=appuser:appuser --from=server-builder /app/shared ./shared

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 3333

# Environment variables
ENV NODE_ENV=production
ENV PORT=3333
ENV LOG_LEVEL=info

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://127.0.0.1:3333/api/health || exit 1

# Start server
CMD ["node", "server/dist/index.js"]
