# Multi-stage Dockerfile for production
# P09-T009: Production deployment configuration

# Stage 1: Build server
FROM node:20-alpine AS server-builder

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY server/package.json ./server/
COPY shared/package.json ./shared/

# Install pnpm and dependencies
RUN npm install -g pnpm@10.20.0
RUN pnpm install --frozen-lockfile

# Copy source code
COPY server ./server
COPY shared ./shared

# Build server
WORKDIR /app/server
RUN pnpm build

# Stage 2: Build client
FROM node:20-alpine AS client-builder

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY client/package.json ./client/
COPY shared/package.json ./shared/

# Install pnpm and dependencies
RUN npm install -g pnpm@10.20.0
RUN pnpm install --frozen-lockfile

# Copy source code (MUST include shared for @shared imports)
COPY client ./client
COPY shared ./shared

# Build client (skip tsc, only vite build)
WORKDIR /app/client
RUN pnpm vite build

# Stage 3: Production image
FROM node:20-alpine

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /app

# Copy package files for production dependencies
COPY --chown=node:node package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY --chown=node:node server/package.json ./server/
COPY --chown=node:node shared/package.json ./shared/

# Install pnpm, tsx runtime, and production dependencies
RUN npm install -g pnpm@10.20.0 tsx@4.20.6
# Disable husky hooks in Docker builds
ENV HUSKY=0
RUN pnpm install --frozen-lockfile --prod --ignore-scripts

# Copy built artifacts AND source (for tsx runtime)
COPY --chown=node:node --from=server-builder /app/server/dist ./server/dist
COPY --chown=node:node --from=server-builder /app/server/src ./server/src
COPY --chown=node:node --from=server-builder /app/server/tsconfig.json ./server/
COPY --chown=node:node --from=client-builder /app/client/dist ./client/dist
COPY --chown=node:node --from=server-builder /app/shared ./shared
# Copy root tsconfig for path resolution
COPY --chown=node:node tsconfig.json ./

# Switch to non-root user (use existing node user from alpine image)
USER node

# Keep WORKDIR at /app for path resolution
WORKDIR /app

# Expose port
EXPOSE 3333

# Environment variables
ENV NODE_ENV=production
ENV PORT=3333
ENV LOG_LEVEL=info

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://127.0.0.1:3333/api/health || exit 1

# Start server using tsx runtime (with root tsconfig for @shared paths)
CMD ["tsx", "server/src/index.ts"]
