{
  "name": "claude-studio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm run build:all",
    "build:server": "pnpm --filter server build",
    "build:client": "pnpm --filter client build",
    "build:all": "pnpm --filter server build && pnpm --filter client build",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "test": "pnpm run test:server && pnpm run test:client",
    "test:all": "pnpm run test:server && pnpm run test:client && pnpm run test:e2e",
    "test:server": "pnpm --filter server test",
    "test:client": "pnpm --filter client test",
    "test:watch": "pnpm run test:watch:server",
    "test:watch:server": "pnpm --filter server test:watch",
    "test:watch:client": "pnpm --filter client test:watch",
    "test:coverage": "pnpm run test:coverage:server && pnpm run test:coverage:client",
    "test:coverage:server": "pnpm --filter server test:coverage",
    "test:coverage:client": "pnpm --filter client test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss,yaml,yml}\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.28.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "js-yaml": ">=4.1.1"
    }
  }
}
